{
    "name": "CookieTextEditor",
    "description" : "__Text_Editor_for_Cookie__",
    "version": "1.0.0",
    "manifest_version": 2,
    "browser_action": {
        "default_icon": {
            "19": "img/icon_19x19.png",
            "38": "img/icon_38x38.png"
        },
        "default_title": "CookieTextEditor",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["js/background.js"]
      },
    "permissions": [
        "tabs",
        "\u003Call_urls\u003E",
        "cookies",
        "contextMenus",
        "unlimitedStorage",
        "notifications",
        "storage",
        "clipboardWrite",
        "http://*/*",
        "https://*/*"
    ]
}